<div class="container">
  <!--検索フォーム-->
  <div class="mt-2 ml-4 p-2">
    <%= form_tag(notes_customers_path, method: "get") do %>
      <%= text_field_tag(:search, params[:search], placeholder: "キーワードを入力", size: 30) %>
      <%= submit_tag("検索") %>
    <% end %>
    <% if @search_word.present? %>
      <%= link_to "home", notes_path %> <i class="fas fa-angle-right"></i> "<%= @search_word %>"
    <% end %>
  </div>

  <!--投稿一覧表示-->
  <% if @notes.present? %>
    <%= render '/public/notes/list_index', notes: @notes %>
  <% else %>
    <div class="mt-3 ml-5">
      投稿はありません
    </div>
  <% end %>
</div>