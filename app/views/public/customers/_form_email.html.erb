<div class="modal fade" id="email_form" tabindex="-1" role="dialog" aria-labelledby="modal-title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-title">メールアドレス変更</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model: @customer ,url: customers_information_edit_path, method: :patch do |f| %>
          <div class="row">
            <div class="col-auto"><%= f.text_field :email, class: "form-control", style: "width: 350px;" %></div>
            <div class="col-auto"><%= f.submit "変更", class: "btn btn-success" %></div>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
      </div>
    </div>
  </div>
</div>