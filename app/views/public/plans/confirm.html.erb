<h6 class="m-3"><b><%= link_to "スポット選択", new_plan_path %> > <u>日程の入力</u> > 作成完了</b></h6>
<div class="container-fluid mt-3">
  <div class="row mt-4">
    <div class="col-md-8">
      <%= form_with model: @plan, local: true do |f| %>
        <div class="col-md-6">
          <%= f.text_field :name, placeholder: "計画名を入力", class: "form-control" %>
        </div>
        <div class="mt-3">
          <% @notes.each_with_index do |note, index| %>
            <div class="d-flex justify-content-center">
              <table>
                <tbody>
                  <tr style="height: 100px">
                    <td class="">
                      <div class="mb-2 mr-1">
                        到着：<%= f.datetime_field "note_#{note.id}_arrival", value: (1.day.from_now.beginning_of_day + 5.hours).strftime('%Y-%m-%dT%T'), tabindex: -1 %>
                      </div>
                      <div class="">
                        出発：<%= f.datetime_field "note_#{note.id}_departure", value: (1.day.from_now.beginning_of_day + 5.hours).strftime('%Y-%m-%dT%T'), tabindex: -1 %>
                      </div>
                    </td>
                    <td id="card-ajax-<%= index %>">
                      <%= render '/public/plans/card_confirm', note: note %>
                    </td>
                    <td id="up_down-ajax-<%= index %>">
                      <%= render '/public/plans/up_down_confirm', note: note %>
                    </td>
                    <td>
                      <div class="ml-1">
                        <%= f.text_area "note_#{note.id}_comment", placeholder: "備考", rows: 3, cols: 25, class: "form-control" %>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          <% end %>
          <%= f.hidden_field :customer_id, value: current_customer.id %>
          <div class="text-center">
            <%= f.submit '計画を作成', class: "btn-lg btn-success mt-5" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4">
      test
    </div>
  </div>
</div>