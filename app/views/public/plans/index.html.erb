<div class="container mt-2">
  <div class="row">
    <div class="col-md-3">
      <%= link_to new_plan_path, class: "btn btn-outline-dark m-3 rounded-pill" do %>
        <i class="fa-solid fa-plus"></i> 計画作成
      <% end %>
    </div>
    <div class="col-md-8 py-3">
      <%= render '/public/plans/search_index' %>
    </div>
  </div>

  <!--planリストwithタブ-->
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">実施前</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">実施済</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">すべて</a>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <%= render '/public/plans/scroll_index', plans: @plans.where(is_complete: false) %>
    </div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
      <%= render '/public/plans/scroll_index', plans: @plans.where(is_complete: true) %>
    </div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
      <%= render '/public/plans/scroll_index', plans: @plans %>
    </div>
  </div>
</div>



